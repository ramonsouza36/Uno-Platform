<Page
    x:Class="ContactBook.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:toolkit="using:Uno.UI.Toolkit"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ContactBook"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Button
            Grid.Column="0"
            Grid.Row="0"
            Padding="10"
            Content="Menu">
            <Button.Flyout>
                <MenuFlyout Placement="BottomEdgeAlignedLeft">
                    <MenuFlyoutItem x:ConnectionId='2' Text="Add Contact"                     />
                    <MenuFlyoutItem x:ConnectionId='3' Text="List Contacts"                     />
                    <MenuFlyoutItem Text="Item 3"/>
                </MenuFlyout>
            </Button.Flyout>
        </Button>



        <StackPanel Grid.Row="1">
            <TextBlock Text="Welcome to the ContactBook" 
                       Height="50"
                       FontSize="30"
                       Width="500"
                       TextAlignment="Center"/>
        </StackPanel>
    </Grid>

</Page>

